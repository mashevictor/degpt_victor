{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "mk-block/post-title",
  "title": "文章标题",
  "version": "1.0",
  "category": "mk-b-cat-site",
  "description": "Basic containers for page sections",
  "keywords": ["mookwai", "title", "post", "page", "entry", "heading"],
  "textdomain": "mookwai",
  "attributes": {
    "blockID": {
      "type": "string"
    },
    "globalSlug": {
      "type": "string"
    },
    "cssClass": {
      "type": "array"
    },
    "htmlAttr": {
      "type": "array"
    },
    "anchor": {
      "type": "string"
    },
    "isHide": {
      "type": "array"
    },
    "tagName": {
			"type": "string",
			"default": "h4"
		},
    "isLink": {
      "type": "boolean",
      "default": false
    },
    "linkRel": {
      "type": "array"
    },
    "openInNew": {
      "type": "boolean",
      "default": false
    },
    "isRestrict": {
      "type": "boolean",
			"default": false
    },
    "interactPreview": {
      "type": "boolean",
      "default": false
    }
	},
  "usesContext": [ "postId", "postType", "queryId", "parentIsPreview", "parentHasLink" ],
  "supports": {
		"html": false
	}
}
