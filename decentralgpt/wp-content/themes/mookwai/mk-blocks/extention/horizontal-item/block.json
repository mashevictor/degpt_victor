{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "mk-block/horizontal-item",
  "version": "1.0",
  "title": "水平滚动-元素",
  "category": "mk-b-cat-extention",
  "description": "Basic containers for page sections",
  "keywords": ["mookwai", "section", "layout", "container", "grid", "flex"],
  "textdomain": "mookwai",
  "parent": [ "mk-block/horizontal" ],
  "attributes": {
    "blockID": {
      "type": "string"
    },
    "cssClass": {
      "type": "array"
    },
    "htmlAttr": {
      "type": "array"
    },
    "anchor": {
      "type": "string"
    },
    "isHide": {
      "type": "array"
    },
    "tagName": {
      "type": "string",
      "default": "div"
    },
    "bgMedia": {
      "type": "object",
      "default": {}
    },
    "interactPreview": {
      "type": "boolean",
      "default": false
    },
    "direction": {
      "type": "string",
      "default": "left"
    }
	},
  "providesContext": {
    "parentIsPreview": "interactPreview"
  },
  "usesContext": [ "parentIsPreview" ],
  "supports": {
		"html": false
	}
}
