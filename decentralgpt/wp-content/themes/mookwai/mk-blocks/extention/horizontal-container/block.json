{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "mk-block/horizontal-container",
  "version": "1.0",
  "title": "Container",
  "category": "mk-b-cat-extention",
  "parent": [ "mk-block/horizontal" ],
  "description": "Container for all horizontal items.",
  "keywords": ["mookwai", "section", "layout", "container", "grid", "flex"],
  "textdomain": "mookwai",
  "attributes": {
    "allowedBlocks": {
      "type": "array",
      "default": [ "mk-block/horizontal-item" ]
    },
    "blockID": {
      "type": "string"
    },
    "cssClass": {
      "type": "array"
    },
    "htmlAttr": {
      "type": "array"
    },
    "anchor": {
      "type": "string"
    },
    "isHide": {
      "type": "array"
    },
    "interactPreview": {
      "type": "boolean",
      "default": false
    }
	},
  "providesContext": {
    "parentIsPreview": "interactPreview"
  },
  "usesContext": [ "parentIsPreview" ],
  "supports": {
		"html": false
	}
}
